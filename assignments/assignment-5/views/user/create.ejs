<%- include('../partials/header-auth') %>

    <% if (!isAuthenticated) { %>
        <div class="container">
            <% } else { %>
                <div class="container-auth">
                    <% } %>
                        <div class="auth-form">
                            <h1>Create post (register copy)</h1>
                            <%- include('../partials/form-errors') %>

                                <form action="/pin/pin-post-creation" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="text" id="username" name="title"
                                            value="<%= typeof createPinData !== 'undefined' ? createPinData.title || '' : '' %>"
                                            placeholder="Add a title" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Title</label>
                                        <input type="text" id="username" name="description"
                                            value="<%= typeof createPinData !== 'undefined' ? createPinData.description || '' : '' %>"
                                            placeholder="Add a description">
                                    </div>

                                    <div class="form-group">
                                        <label for="pinImage">Profile Image</label>
                                        <input type="file" id="pinImage" name="pinImage"
                                            accept="image/png, image/jpeg, image/gif" required>
                                        <div class="form-hint">Max size: 2MB. Formats: JPG, PNG, GIF</div>
                                    </div>

                                    <div class="form-actions">
                                        <button type="submit" class="btn primary-btn">Post</button>
                                    </div>
                                </form>

                        </div>
                </div>

                <%- include('../partials/footer') %>
<div class="container-auth">
  <div class="pin-grid">
    <% pins.forEach((pin) => { %>
      <div class="pin-card">
        <!-- Added: Wrapper around image and save button -->
        <div class="pin-img-wrapper">
          <button class="save-btn">Save</button>
          <img
            src="/pin/get-image/<%= pin._id %>"
            alt="<%= pin.title || 'Pin Image' %>"
            title="<%= pin.title || 'Pin Image' %>"
            loading="lazy"
          >
        </div>
      </div>
    <% }); %>
  </div>
</div>

